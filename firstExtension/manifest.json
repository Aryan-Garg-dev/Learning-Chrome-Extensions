{
    "manifest_version": 3,
    "name": "First-Extension",
    "version": "1.0.0",
    "icons": {
        "16": "/assets/home_icon_16.png",
        "32": "/assets/home_icon_32.png",
        "48": "/assets/home_icon_48.png",
        "128": "/assets/home_icon_128.png"
    },
    "background": {
        "service_worker": "/scripts/service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "/index.html"
    }, 
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}